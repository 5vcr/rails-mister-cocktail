<div class="container">
  <div class="row">
  <div class="col-xs-4 col-xs-offset-3">

      <h2>
        Delicious cocktails
      </h2>

      <p><%= link_to "New cocktail", new_cocktail_path, class: "btn btn-primary btn-sm" %></p>

      <ul>
      <% @cocktails.each do |cocktail| %>
        <li>
        <%= link_to cocktail.name, cocktail_path(cocktail)%>
        </li>
      <% end %>
      </ul>
    </div>
  </div>
</div>
