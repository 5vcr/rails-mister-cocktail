<%= link_to "< back", cocktails_path %>
<h2><%= @cocktail.name %></h2>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
    <%= dose.ingredient.name %>
    <%= dose.description %>
    <%= link_to "Remove",
        dose_path(dose),
        method: :delete,
        data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to "New ingredient", new_cocktail_dose_path(@cocktail),class: "btn btn-primary btn-sm" %>
